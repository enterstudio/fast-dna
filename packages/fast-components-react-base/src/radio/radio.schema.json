{
    "$schema": "http://json-schema.org/schema#",
    "title": "Radio",
    "description": "A radio component's schema definition",
    "type": "object",
    "id": "radio",
    "children": true,
    "properties": {
        "tag": {
            "title": "HTML tag",
            "type": "string",
            "enum": [
                "div",
                "label"
            ],
            "default": "div"
        },
        "checked": {
            "title": "Checked",
            "type": "boolean"
        },
        "disabled": {
            "title": "Disabled",
            "type": "boolean"
        },
        "children": {
            "title": "Text",
            "type": "string"
        }
    }
}
